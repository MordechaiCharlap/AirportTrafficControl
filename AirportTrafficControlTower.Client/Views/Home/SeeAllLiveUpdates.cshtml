@model AirportTrafficControlTower.Client.Models.LiveUpdatesViewModel

@{
    ViewData["Title"] = "SeeAllLiveUpdates";
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LiveUpdatesList.First().UpdateTime)
            </th>
            <th>
                Flight
            </th>

            <th>
                Entered/Left
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiveUpdatesList.First().StationId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LiveUpdatesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightId)
                </td>
                @if (item.IsEntering)
                {
                    <td>Entered</td>
                }
                else
                {
                    <td>Left</td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.StationId)
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="d-flex justify-content-center">
    @{

        if (!Model.IsFirstPage)
        {
            var nextPage1 = @Model.CurrentPage - 1;
            <a asp-action="SeeAllLiveUpdates" asp-route-pageNum="@nextPage1"> <i class="bi bi-arrow-left-circle"></i></a>
        }
        if (!Model.IsLastPage)
        {
            var nextPage2 = @Model.CurrentPage + 1;
            <a asp-action="SeeAllLiveUpdates" asp-route-pageNum="@nextPage2"> <i class="bi bi-arrow-right-circle"></i></a>
        }
    }
</div>
